<?xml version="1.0" encoding="UTF-8"?>
<project name="albums" default="all" basedir=".">

	<property name="fop.home" value="C:\temp\fop-0.95" />

	<target name="clean">
		<delete dir="sortie"/>
		<mkdir dir="sortie"/>
	</target>
	
	<taskdef name="fop" classname="org.apache.fop.tools.anttasks.Fop">
		<classpath>
			<fileset dir="${fop.home}/lib">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${fop.home}/build">
				<include name="fop.jar" />
				<include name="fop-hyph.jar" />
			</fileset>
		</classpath>
	</taskdef>

	<target name="all" depends="clean">
		<xslt style="src/cv2fo.xslt" in="src/example_CV.xml" out="sortie/sortie.fo" />
		<fop format="application/pdf" outdir="sortie/" messagelevel="debug">
			<fileset dir="sortie/">
				<include name="*.fo" />
			</fileset>
		</fop>
		<fop format="application/rtf" outdir="sortie/" messagelevel="debug">
			<fileset dir="sortie/">
				<include name="*.fo" />
			</fileset>
		</fop>
	</target>
</project>